@page
@model IndexModel

<div style="display: flex; justify-content: space-between;">
    <div>

        <h1>الشبكة</h1>
        <ul>
            @for (int i = 1; i <= 9; i++)
            {
                <li class="neuron-item">
                    <a asp-page="/Neuron" asp-route-id="@i">العصبون رقم @i</a>
                </li>
            }
        </ul>
    </div>

    <div style="width: 60%; text-align: center;">
        <img src="images/aiexplainer.azurewebsites.net.png" alt="QR Code" style="max-width: 100%;" class="d-none d-lg-block" >
    </div>

</div>
<style>
    .neuron-item {
        margin-bottom: 20px;
        font-size: 2rem;
    }
</style>